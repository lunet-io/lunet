---
layout: base
---
<div class="container-xxl">
  {{~
    menu = page.menu
    menu_width = 3
    if menu != null
      menu_width = menu.width ?? 3
    end
    if menu_width < 2
      menu_width = 2
    end
    if menu_width > 4
      menu_width = 4
    end
    sidebar_xxl_width = menu_width - 1
    if sidebar_xxl_width < 1
      sidebar_xxl_width = 1
    end
    content_xxl_width = 10 - sidebar_xxl_width
    sidebar_col_classes = "col-md-3 col-lg-3 col-xl-3 col-xxl-" + sidebar_xxl_width
    content_col_classes = "col-12 col-md-9 col-lg-9 col-xl-9 col-xxl-" + content_xxl_width
  ~}}
  <div class="row">
      <!-- Left sidebar - responsive offcanvas (offcanvas on mobile, visible sidebar on md+) -->
      {{~ if menu != null ~}}
      <nav id="docs-sidebar-menu" class="{{ sidebar_col_classes }} offcanvas-md offcanvas-start sticky-md-top menu-sidebar align-self-start order-1 order-md-0" tabindex="-1" aria-labelledby="docs-sidebar-menu-label" aria-expanded="true">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="docs-sidebar-menu-label">{{ site.docs_menu_label }}</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#docs-sidebar-menu" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          {{~ menu_depth = page.section == "api" ? 6 : 2 ~}}
          {{ menu.render { kind: "menu",  collapsible: true, depth: menu_depth } }}
        </div>
      </nav>
      {{~ end ~}}
      <!-- Right sidebar (TOC) - collapsible on mobile, visible sidebar on xxl+ -->
      <aside id="docs-sidebar-toc" class="col-12 col-xxl-2 sticky-xxl-top menu-sidebar align-self-start order-0 order-xxl-2 collapse d-xxl-block" aria-expanded="true">
        <h3 class="toc-title">{{ site.docs_toc_label }}</h3>
        <nav class="js-toc"></nav>
      </aside>
      <!-- Main content column -->
      <div class="{{ content_col_classes }} order-2 order-md-1 js-toc-content">
        {{ if menu != null; menu.breadcrumb; end }}
        <p id="lunet-results"></p>
        <!-- Toggle buttons visible only on small screens -->
        <div class="d-md-none mb-3">
          {{~ if menu != null ~}}
          <button
            class="btn btn-outline-secondary btn-sm me-2"
            type="button"
            data-bs-toggle="offcanvas"
            data-bs-target="#docs-sidebar-menu"
            aria-controls="docs-sidebar-menu"
            aria-label="Toggle docs menu">
            {{ site.docs_menu_label }}
          </button>
          {{~ end ~}}            
          <button
            class="btn btn-outline-secondary btn-sm d-xxl-none"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#docs-sidebar-toc"
            aria-controls="docs-sidebar-toc"
            aria-expanded="false"
            aria-label="Toggle Table Of Contents">
            {{ site.docs_toc_label }}
          </button>
        </div>
<!-- lunet:summarize -->
{{ content }}
      </div>
  </div>
</div>
