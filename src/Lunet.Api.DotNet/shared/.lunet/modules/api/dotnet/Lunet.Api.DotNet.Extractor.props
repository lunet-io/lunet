<Project>
  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <!-- Convention-based extra API documentation:
         Add Markdown files under `apidocs/` with frontmatter `uid: <API UID>`
         and sections `# Summary`, `# Remarks`, `# Example`. -->
    <AdditionalFiles Include="$(ProjectDir)apidocs\**\*.md" LunetApiDotNet="true" />
  </ItemGroup>

  <ItemGroup>
    <CompilerVisibleProperty Include="IntermediateOutputPath" />
    <CompilerVisibleProperty Include="ProjectDir" />
    <CompilerVisibleProperty Include="GenerateDocumentationFile" />
    <CompilerVisibleProperty Include="LunetApiDotNetIncludeAssemblies" />
    <CompilerVisibleItemMetadata Include="AdditionalFiles" MetadataName="LunetApiDotNet" />
    <Analyzer Include="$(MSBuildThisFileDirectory)Lunet.Api.DotNet.Extractor.dll"/>
  </ItemGroup>
</Project>
